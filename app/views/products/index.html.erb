<p id="notice"><%= notice %></p>
<div class="centerify">
    <h1>Listing Products</h1>
</div>
<div class="container-fluid">
    <div class="col-md-11">
    </div>
    <div class="col-md-1">
      <%= link_to image_tag('add.png'), new_product_path %>
    </div>
</div>
<div class="container-fluid">

    <% @products.each_with_index do |product, i| %>
    <div class="product">
    <div class="row" style=background-image:url('/assets/<%= i%4+1 %>.jpg')>
      <div class="container">
        <div class="col-md-2">
          <div class="image">
          <div class="container">
            <div class="row">
                <img src="<%= product.image_url %>">
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="container">
            <div class="row">
              <div class="title">
                <%= product.title %>
              </div>
            </div>
            <div class="row">
              <%= product.description %>
            </div>
            <div class="row">
              <%= product.price %>
            </div>
          </div>
        </div>
        <div class="col-md-1">
          <div class="container">
            <div class="row">
                <%= link_to image_tag('show.png'), product %>
            </div>
            <div class="row">
                <%= link_to image_tag('edit.png'), edit_product_path(product) %>
            </div>
            <div class="row">
                <%= link_to image_tag('delete.png'), product, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
    <% end %>
  </div>